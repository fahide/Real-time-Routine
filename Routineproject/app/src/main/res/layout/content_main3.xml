<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/backg2"
    android:layout_marginTop="28dp">

<LinearLayout


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    xmlns:android="http://schemas.android.com/apk/res/android" >

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >



        <ImageView
            android:id="@+id/abc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icelab"
            android:layout_marginTop="15dp"

            />




</LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="        Welcome\n        ................\n Select Your Option"

        android:textSize="20dp"
        android:textColor="#eef1f4"
        android:layout_gravity="center"
        android:textStyle="bold"
        />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:text="1st year"
        android:textAllCaps="false"
        android:background="@drawable/cell_shape"
        android:id="@+id/fa1"

       android:onClick="doit"
        android:textColor="#FFFAF8F8"
        />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:text="2nd year"
        android:textAllCaps="false"
        android:textColor="#FFFAF8F8"
        android:background="@drawable/cell_shape"
       android:id="@+id/fa2"
        android:onClick="doitt"
        />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="3rd year"
        android:textAllCaps="false"
        android:textColor="#FFFAF8F8"
        android:background="@drawable/cell_shape"
        android:layout_margin="10dp"
        android:id="@+id/fa3"
        android:onClick="doittt"
        />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="4th year"
        android:textAllCaps="false"
        android:textColor="#FFFAF8F8"
        android:background="@drawable/cell_shape"
        android:layout_margin="10dp"
        android:id="@+id/fa4"
        android:onClick="doitttt"
        />

</LinearLayout>


</ScrollView>